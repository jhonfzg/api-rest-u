<%- include('header') %>

<!--Form pacientes -->
<header>
    <h2 id="title">Bienvenido</h2>
    <p id="description">Formulario para crear Pacientes</p>
</header>
<div>
    <main>
        <form action="/api/principal/patients" method="post">
            
                <label for="firstName"> Nombre:
                    <input 
                    id="firstName" 
                    name="firstName" 
                    type="text" 
                    minlength="3" 
                    maxlength="20"
                    required 
                    />
                </label>
                <label for="lastName"> Apellido: 
                    <input 
                    id="lastName" 
                    name="lastName" 
                    type="text" 
                    minlength="5"
                    maxlength="20" 
                    required 
                    />
                </label>
                <label for="age"> Edad:
                    <input 
                    type="number" 
                    name="age" 
                    min="18" 
                    max="100" 
                    required
                    />
                </label>
                <label for="phone"> Teléfono:
                    <input 
                    type="number" 
                    name="phone" 
                    required
                    />
                </label>
                <label for="cedula"> Cédula:
                    <input 
                    type="number" 
                    name="cedula" 
                    required
                    />
                </label>
                <button type="submit" name="submit" style="background-color: green";>Agregar Paciente</button>
            
        </form>

<br>
        <form id="searchForm" method="get" action="/api/principal/patients">
            <label for="patientCedula"> Paciente cedula 
                <input 
                type="number" 
                id="patientCedula" 
                required
                />
            </label>
            <button type="submit" style="background-color: green"; >Buscar Patiente</button>
        </form>
<br>
        <form id="deleteForm">
            <label for="cedula">Eliminar paciente por cedula:</label>
            <input type="number" id="cedula" required>
            <button type="submit">Eliminar</button>
        </form>
<br>
        <form  method="get" action="/api/principal/patients">
            <p>Pacientes</p>
            <button type="submit" style="background-color: green"; >Buscar</button>
        </form>
    </main>
</div>

<script src="/js/getPatientByCedula.js"></script>
<script src="/js/deletePatientByCedula.js"></script>

<%- include('footer') -%>
